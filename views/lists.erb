<ul id="lists">
  <% sort_by_with_index(@lists) { |(l, _)| complete?(l) ? 1 : 0 }.each do |(list, idx)| %>
    <li class="<%= list_class(list) %>">
      <a href="/lists/<%= idx %>">
        <h2>
          <%= "#{list[:name]}" %>
        </h2>
        <p><%= stats(list) %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
